        <table class="table todo-table mt-4">
            <thead>
                <tr>
                    <th></th>
                    <th>Task</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% todoList.forEach(todo => { %>
                    <tr>
                        <td><input type="checkbox" <% if (todo.completed) { %> checked <% } %> disabled></td>
                        <td><%= todo.task %></td>
                        <td><%= todo.desc %></td>
                        <td><%= todo.status %></td>
                        <td>
                            <button class="btn btn-warning update-btn" data-id="<%= todo._id %>">Update</button>
                            <button class="btn btn-danger remove-btn" data-id="<%= todo._id %>">Remove</button>
                            <% if (!todo.completed) { %>
                                <button class="btn btn-success complete-btn" data-id="<%= todo._id %>">Complete</button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
